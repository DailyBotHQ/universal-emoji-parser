{
  "name": "universal-emoji-parser",
  "version": "0.5.28",
  "description": "This tool allow parse unicode and emoji codes to html images using emojilib && Twemoji CDN",
  "keywords": [
    "emoji",
    "parser",
    "transform",
    "slack",
    "twitter",
    "github",
    "emoji-parser",
    "unicode"
  ],
  "main": "dist/main.js",
  "scripts": {
    "test": "mocha --require ts-node/register test/**.ts --timeout 25000 --colors",
    "test:watch": "mocha -w --require ts-node/register test/**.ts --timeout 25000 --colors",
    "release": "standard-version",
    "prepare1": "npm run build",
    "start": "node dist/main.js",
    "dev": "nodemon src/main.ts",
    "build": "tsc --build tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rockalabs/universal-emoji-parser.git"
  },
  "author": "@xergioalex",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rockalabs/universal-emoji-parser/issues"
  },
  "homepage": "https://github.com/rockalabs/universal-emoji-parser#readme",
  "dependencies": {
    "emojilib": "3.0.6",
    "twemoji": "14.0.2",
    "unicode-emoji-json": "0.3.1"
  },
  "devDependencies": {
    "@types/node": "17.0.40",
    "mocha": "10.0.0",
    "@types/mocha": "9.1.1",
    "nodemon": "2.0.16 ",
    "ts-node": "10.8.1",
    "typescript": "4.7.3",
    "standard-version": "9.5.0",
    "chai": "4.3.6",
    "@types/chai": "4.3.1"
  }
}
